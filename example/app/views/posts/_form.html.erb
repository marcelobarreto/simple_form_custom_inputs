<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :active, as: :switch, label: false, inline_label: 'Active' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
